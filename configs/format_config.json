{
  "format": {
    "prettier": { "enable": true, "globs": ["static/**/*.{html,css,js}"] },
    "black":    { "enable": true, "paths": ["app"] },
    "ruff":     { "enable": true, "args": ["check", "app", "--fix"] },
    "cleanup": {
      "enable": true,
      "paths": ["app", "static"],
      "exts": [".py", ".js", ".ts", ".css", ".html", ".json", ".sh"],
      "exclude_exts": [".md"],
      "compact_blocks": true,
      "max_consecutive_blanks": 0
    }
  }
}
