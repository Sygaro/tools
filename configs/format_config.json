{
  "format": {
    "prettier": {
      "enable": true,
      "globs": ["**/*.{html,css,js,ts,tsx,json,yml,yaml,md}"],
      "extra_args": ["--print-width", "140", "--tab-width", "2", "--single-quote", "--no-semi", "--trailing-comma", "es5"]
    },
    "black": {
      "enable": true,
      "paths": ["./"],
      "args": ["--line-length", "140", "--target-version", "py311"]
    },
    "ruff": {
      "enable": true,
      "args": ["check", "./", "--fix", "--select", "E,F,I,UP", "--ignore", "E501"]
    },
    "cleanup": {
      "enable": true,
      "compact_blocks": true,
      "max_consecutive_blanks": 1,
      "exts": [".py,.js,.ts,.css,.html,.json,.sh"],
      "exclude_exts": [".md"],
      "paths": []
    }
  }
}
